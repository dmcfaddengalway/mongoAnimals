<h1 class="text-center mb-3">{{title}}</h1>
<form action="/api/animals" method="POST" class="mb-4">
  <div class="form-group">
    <label for="common_name">Common Name</label>
    <input type="text" name="common_name" class="form-control">
  </div>
  <div class="form-group">
    <label for="scientific_name">Scientific Name</label>
    <input type="text" name="scientific_name" class="form-control">
  </div>
  <div class="form-group">
    <label for="age">Age</label>
    <input type="text" name="age" class="form-control">
  </div>
  <div class="form-group">
    <label for="gender">Gender</label>
    <input type="text" name="gender" class="form-control">
  </div>
  <div class="form-group">
    <label for="key_charasteric">Key Charasteric</label>
    <input type="text" name="key_charasteric" class="form-control">
  </div>
  <div class="form-group">
    <label for="nationality">Nationality</label>
    <input type="text" name="nationality" class="form-control">
  </div>
  <div class="form-group">
    <label for="prescriptions">Prescription(s)</label>
    <input type="text" name="prescriptions" class="form-control">
  </div>
  <input type="submit" value="Add Animal" class="btn btn-primary btn-block">
</form>
<h4>Animals</h4>
<table class="animals">
  <tr>
    <th>Animal Number</th>
    <th>Common Name</th>
    <th>Scientific Name</th>
    <th>Age</th>
    <th>Gender</th>
    <th>Key Charasteric</th>
    <th>Nationality</th>
    <th>Prescriptions</th>
  </tr>
  <tbody>
    {{#each animals}}
      <tr>
        <td>{{this.id}}</td>
        <td>{{this.animal}}</td>
        <td>{{this.animal_science_name}}</td>
        <td>{{this.age}}</td>
        <td>{{this.gender}}</td>
        <td>{{this.key_characteristic}}</td>
        <td>{{this.nationality}}</td>
        <td>{{this.prescriptions}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
